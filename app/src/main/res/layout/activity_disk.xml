<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DiskActivity">
    <RelativeLayout
        android:id="@+id/relati"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginStart="10dp"
            android:stateListAnimator="@null"
            android:id="@+id/button_network_disk"
            android:textColor="@color/black"
            android:background="@drawable/button_color_selected_selector"
            android:layout_centerVertical="true"
            android:text="上传图片"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
        <TextView
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:text="图片资源"
            android:textSize="18sp"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/return_icon"
            android:id="@+id/return_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
    <TextView
        android:layout_below="@id/relati"
        android:id="@id/xian1"
        android:background="#808080"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_below="@id/xian1"
        android:id="@+id/swiperefee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <GridView
            android:scrollbars="none"
            android:fadeScrollbars="false"
            android:id="@+id/gridview"
            android:stretchMode="columnWidth"
            android:numColumns="3"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <com.github.chrisbanes.photoview.PhotoView
        android:visibility="gone"
        android:id="@+id/photoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>