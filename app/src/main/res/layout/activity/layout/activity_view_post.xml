<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <View
        android:background="#ffffff"
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ScrollView
        android:layout_below="@id/top_view"
        android:id="@+id/scrollView"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <net.csdn.roundview.RoundImageView
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher_round"
                    android:id="@+id/avatar_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    app:rStrokeWidth="1dp"
                    app:rStrokeColor="#f2f3f7"
                    app:rRadius="10dp"/>
                <TextView
                    android:gravity="center_vertical"
                    android:layout_toEndOf="@id/avatar_img"
                    android:id="@+id/name"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/black"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/url_txt_id"
                    android:gravity="center_vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@id/avatar_img"
                    android:layout_marginStart="5dp"
                    android:autoSizeTextType="uniform"
                    android:textColor="#808080"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/sign"
                    android:textColor="#808080"
                    android:text=""
                    android:gravity="end"
                    android:layout_weight="1"
                    android:textSize="9sp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:id="@+id/linear"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>
            <TextView
                android:layout_marginBottom="8dp"
                android:id="@+id/text_time"
                android:textColor="#808080"
                android:autoSizeTextType="uniform"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <TextView
                android:background="#f2f3f7"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:layout_marginBottom="150dp"
                android:orientation="vertical"
                android:id="@+id/linear_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_toStartOf="@id/button_ok"
            android:id="@+id/edit_text"
            android:textColor="@color/black"
            android:gravity="start"
            android:hint="这里写评论"
            android:maxLength="100"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_back"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <androidx.appcompat.widget.AppCompatButton
            android:stateListAnimator="@null"
            android:layout_alignParentEnd="true"
            android:id="@+id/button_ok"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="发布"
            android:background="@drawable/button_event_back"
            android:layout_width="80dp"
            android:layout_height="52dp"/>
    </RelativeLayout>
</RelativeLayout>