<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/round_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relati"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_centerInParent="true"
            android:text="讨论"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/return_icon"
            android:id="@+id/return_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
    <TextView
        android:alpha="0.2"
        android:layout_below="@id/relati"
        android:id="@+id/xian"
        android:background="#808080"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:layout_below="@id/xian"
        android:textColor="@color/black"
        android:maxLength="50"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:background="@drawable/edit_back"
        android:padding="10dp"
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_below="@id/edit_text"
        android:id="@+id/linear_bu"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:text="选择图片"
            android:id="@+id/add_img"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_color_selected_selector"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:text="提交文本"
            android:id="@+id/add_text"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_color_selected_selector"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
    </LinearLayout>

    <ScrollView
        android:padding="10dp"
        android:layout_above="@id/button_ok"
        android:layout_below="@id/linear_bu"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_ok"
        android:layout_above="@id/di"
        android:background="@drawable/button_color_selected_selector"
        android:text="发表"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/di"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>