<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top_relati"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/back_img"
            android:background="#00000000"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:background="#00000000"
            android:id="@+id/jianbian_img"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:src="@drawable/white_jianbian"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/top_title"
            android:id="@+id/relati_page"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <net.csdn.roundview.CircleImageView
                android:scaleType="centerCrop"
                android:id="@+id/avatar_img"
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:rStrokeWidth="1dp"
                app:rStrokeColor="#f2f3f7" />
            <TextView
                android:id="@+id/name"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="这个是昵称"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/avatar_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="小尾巴"
                android:id="@+id/sign"
                android:layout_marginStart="12dp"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_toEndOf="@id/avatar_img"
                android:layout_below="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/account_id"
                android:textColor="@color/black"
                android:layout_above="@id/linear_menu"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="#00000000"
                android:layout_alignParentBottom="true"
                android:id="@+id/linear_menu"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:stateListAnimator="@null"
                    android:text="我的文章"
                    android:textColor="@color/black"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/button_article"
                    android:layout_weight="1"
                    android:background="@drawable/button_event_back_tran"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:stateListAnimator="@null"
                    android:id="@+id/button_collection"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/black"
                    android:background="@drawable/button_event_back_tran"
                    android:text="我的收藏"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:stateListAnimator="@null"
                    android:id="@+id/button_system"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/button_event_back_tran"
                    android:text="系统设置"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
</LinearLayout>