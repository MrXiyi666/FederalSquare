<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:text="欢迎 注册"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="编号"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_back"
        android:textColor="@color/black"
        android:maxLength="11"
        android:textSize="15sp"
        android:textAlignment="center"
        android:padding="10dp"
        android:id="@+id/enroll_edit_account"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <EditText
        android:hint="密码"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_back"
        android:textColor="@color/black"
        android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:maxLength="11"
        android:textAlignment="center"
        android:padding="10dp"
        android:id="@+id/enroll_edit_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <EditText
        android:hint="确认密码"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_back"
        android:textColor="@color/black"
        android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:maxLength="11"
        android:textAlignment="center"
        android:padding="10dp"
        android:id="@+id/enroll_edit_password2"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:stateListAnimator="@null"
        android:id="@+id/button_enroll"
        android:text="注册"
        android:background="@drawable/button_color_selected_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:stateListAnimator="@null"
        android:layout_marginTop="10dp"
        android:id="@+id/button_login"
        android:text="登录"
        android:background="@drawable/button_color_selected_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>