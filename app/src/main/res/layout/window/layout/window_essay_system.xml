<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/round_white_stroke_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relati"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_centerInParent="true"
            android:text="文章设置"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/return_icon"
            android:id="@+id/return_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/xian"
        android:background="#808080"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_back"
            android:padding="15dp"
            android:hint="广场数量 默认50个"
            android:digits="0123456789"
            android:layout_gravity="center_vertical"
            android:id="@+id/square_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:stateListAnimator="@null"
            android:background="@drawable/button_event_back"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/button_square"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="确认"
            android:layout_width="150dp"
            android:layout_height="52dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_back"
            android:padding="15dp"
            android:hint="热门数量 默认10个"
            android:digits="0123456789"
            android:layout_gravity="center_vertical"
            android:id="@+id/hot_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:stateListAnimator="@null"
            android:background="@drawable/button_event_back"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/button_hot"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="确认"
            android:layout_width="150dp"
            android:layout_height="52dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_back"
            android:padding="15dp"
            android:hint="我的文章数量 默认10个"
            android:digits="0123456789"
            android:layout_gravity="center_vertical"
            android:id="@+id/home_essay_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:stateListAnimator="@null"
            android:background="@drawable/button_event_back"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/button_home_essay"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="确认"
            android:layout_width="150dp"
            android:layout_height="52dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_back"
            android:padding="15dp"
            android:hint="我的收藏数量 默认10个"
            android:digits="0123456789"
            android:layout_gravity="center_vertical"
            android:id="@+id/home_collection_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:stateListAnimator="@null"
            android:background="@drawable/button_event_back"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/button_home_collection"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="确认"
            android:layout_width="150dp"
            android:layout_height="52dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_back"
            android:padding="15dp"
            android:hint="广场刷新计时器 5000为5秒"
            android:digits="0123456789"
            android:layout_gravity="center_vertical"
            android:id="@+id/time_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:stateListAnimator="@null"
            android:background="@drawable/button_event_back"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/button_time"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="确认"
            android:layout_width="150dp"
            android:layout_height="52dp"/>
    </LinearLayout>
</LinearLayout>