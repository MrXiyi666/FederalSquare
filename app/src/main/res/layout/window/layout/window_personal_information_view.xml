<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/round_white_stroke_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="个人信息"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/return_icon"
            android:id="@+id/return_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
    <View
        android:layout_marginBottom="10dp"
        android:background="#808080"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:background="#00000000"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginBottom="10dp"
            android:hint="修改名字"
            android:textSize="15sp"
            android:padding="15dp"
            android:gravity="start"
            android:inputType="text"
            android:background="@drawable/edit_back"
            android:id="@+id/edit_name"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:hint="修改签名"
            android:inputType="text"
            android:padding="15dp"
            android:gravity="start"
            android:background="@drawable/edit_back"
            android:id="@+id/edit_sign"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="修改密码"
            android:padding="15dp"
            android:gravity="start"
            android:background="@drawable/edit_back"
            android:id="@+id/edit_password"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:id="@+id/text_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginBottom="10dp"
            android:stateListAnimator="@null"
            android:id="@+id/button_sync"
            android:background="@drawable/button_event_back"
            android:text="从云端同步"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginBottom="10dp"
            android:stateListAnimator="@null"
            android:id="@+id/button_ok"
            android:background="@drawable/button_event_back"
            android:text="提交到云端"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:stateListAnimator="@null"
            android:id="@+id/button_delete"
            android:background="@drawable/button_event_back"
            android:text="登出"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>