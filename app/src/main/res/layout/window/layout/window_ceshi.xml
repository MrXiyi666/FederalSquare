<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/ding_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_above="@id/button_ok"
        android:layout_below="@id/ding_view"
        android:background="@drawable/round_white_stroke_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relati"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:gravity="center"
                    android:text="编辑器"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/return_icon"
                    android:id="@+id/return_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </RelativeLayout>
            <View
                android:id="@+id/xian"
                android:background="#808080"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/linear_bu"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:stateListAnimator="@null"
                    android:text="选择图片"
                    android:id="@+id/add_img"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/button_event_back_tran"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:stateListAnimator="@null"
                    android:text="提交文本"
                    android:id="@+id/add_text"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/button_event_back_tran"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_bu2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:stateListAnimator="@null"
                    android:text="图片链接 或 视频链接"
                    android:id="@+id/add_img_or_video_url"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/button_event_back_tran"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <EditText
                android:textColor="@color/black"
                android:textSize="15sp"
                android:hint="这里写文章"
                android:layout_margin="10dp"
                android:background="@drawable/edit_back"
                android:padding="15dp"
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:stateListAnimator="@null"
        android:id="@+id/button_ok"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_event_back_tran"
        android:text="发表文章"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</RelativeLayout>