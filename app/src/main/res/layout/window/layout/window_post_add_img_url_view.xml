<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/round_white_stroke_black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relati"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_centerInParent="true"
            android:text="外部链接"
            android:textSize="18sp"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/return_icon"
            android:id="@+id/return_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/xian"
        android:background="#808080"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="如果你要导入大文件图片或者视频 请在下面输入文件链接\n如何确定链接正确？\n请你在浏览器网址地址输入文件链接 确保图片或视频正常显示即可\n注意：请确保链接内只有末尾一个 . 符号用于文件后缀名 以确保正确的解析\n例如：http://xxxx/123.mp4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:hint="图片或视频链接"
            android:inputType="text"
            android:padding="15dp"
            android:gravity="start"
            android:background="@drawable/edit_back"
            android:id="@+id/edit_url"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:stateListAnimator="@null"
            android:text="确认"
            android:id="@+id/button_ok"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_event_back_tran"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>

</LinearLayout>