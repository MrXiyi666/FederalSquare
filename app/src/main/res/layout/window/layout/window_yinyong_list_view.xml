<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/round_white_stroke_black"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relati"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_centerInParent="true"
            android:text="引用列表"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/return_icon"
            android:id="@+id/return_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/xian"
        android:background="#808080"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:gravity="start"
        android:text="引用新的广场实例可以让多个服务器文章出现在同一个时间线内\n注意：结尾请加上 / 符号。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:background="@drawable/edit_back"
                android:padding="15dp"
                android:id="@+id/edit_text"
                android:hint="引用的实例地址"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:inputType="text"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:background="@drawable/edit_back"
                android:padding="15dp"
                android:id="@+id/edit_text_password"
                android:hint="实例密码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="TextFields" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:stateListAnimator="@null"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/button_event_back"
            android:id="@+id/button_add"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="添\n加"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <ScrollView
        android:scrollbars="none"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linear"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
    </ScrollView>
</LinearLayout>