<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/round_white_stroke_black"
    android:padding="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relati"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="编辑器"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/return_icon"
            android:id="@+id/return_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
    <View
        android:layout_below="@id/relati"
        android:id="@+id/xian"
        android:background="#808080"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_below="@id/xian"
        android:id="@+id/linear_bu"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:stateListAnimator="@null"
            android:text="选择图片"
            android:id="@+id/add_img"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_event_back_tran"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:stateListAnimator="@null"
            android:text="提交文本"
            android:id="@+id/add_text"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_event_back_tran"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/linear_bu"
        android:id="@+id/linear_bu2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:stateListAnimator="@null"
            android:text="图片链接 或 视频链接"
            android:id="@+id/add_img_or_video_url"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_event_back_tran"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
    <EditText
        android:layout_below="@id/linear_bu2"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:hint="这里写文章"
        android:layout_margin="10dp"
        android:background="@drawable/edit_back"
        android:padding="15dp"
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <ScrollView
        android:id="@+id/scrollView"
        android:padding="10dp"
        android:layout_above="@id/button_ok"
        android:layout_below="@id/edit_text"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:stateListAnimator="@null"
        android:id="@+id/button_ok"
        android:layout_above="@id/di"
        android:background="@drawable/button_event_back_tran"
        android:text="发表文章"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <View
        android:id="@+id/di"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>