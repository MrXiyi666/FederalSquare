<?xml version="1.0" encoding="utf-8"?>
<fun.android.federal_square.view.Post_View xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <net.csdn.roundview.RoundImageView
            android:src="@mipmap/ic_launcher_round"
            android:id="@+id/avatar_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            app:rStrokeWidth="1dp"
            app:rStrokeColor="#f2f3f7"
            app:rRadius="10dp"/>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="start"
                    android:layout_weight="1"
                    android:id="@+id/name_1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:id="@+id/name"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/url_txt_id"
                        android:visibility="gone"
                        android:textSize="15sp"
                        android:textColor="#f2f3f7"
                        android:gravity="center_vertical"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/sign"
                    android:textColor="#808080"
                    android:text=""
                    android:gravity="end"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/linear"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginEnd="50dp"
            android:id="@+id/button_forward"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/button_forward_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="9sp"
                android:textColor="#808080"
                android:text="转发"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button_message"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/button_message_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="9sp"
                android:textColor="#808080"
                android:text="评论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="50dp"
            android:id="@+id/button_collection"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/button_collection_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="9sp"
                android:textColor="#808080"
                android:text="收藏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/di_xian"
        android:layout_marginTop="10dp"
        android:background="#f2f3f7"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</fun.android.federal_square.view.Post_View>